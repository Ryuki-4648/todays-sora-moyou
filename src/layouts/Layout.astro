<style is:global>
	:root {
		--accent: 96, 134, 207;
		--accent-light: 131, 139, 166;
		--accent-dark: 16, 27, 66;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
      rgb(var(--accent-dark)) 30%,
			white 60%
		);
    --accent-color01: 14, 144, 171;
    --accent-color02: 0, 135, 164;
    --accent-color03: 11, 112, 144;
    --accent-color04: 10, 96, 123;
    --accent-color05: 0, 74, 104;
    --accent-gold01: 184, 170, 119;
	}
	html {
		font-family: system-ui, sans-serif;
		//background: #13151a;
		background: linear-gradient(rgba(var(--accent-color05), 95%), rgba(var(--accent-color01), 90%));
    font-family: 'Montserrat', sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
