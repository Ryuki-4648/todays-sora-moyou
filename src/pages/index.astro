---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { fetchNasaApiImage } from '../api/nasa-api';

const apiData = await fetchNasaApiImage();

// Astro.jsについて
// コードフェンス（—-）内のコードは静的HTMLに変換される。サーバー側で実行されるもので、ブラウザで実行されるものではない。
// .astro部品にはJavaScriptロジックを埋め込めない。
---


<Layout title="Welcome to Astro.">
	<main>
		<p><span class="text-gradient">by NASA Open APIs</span></p>
		<h1 class="title-main">今日の宇宙模様</h1>
		<div class="instructions">
      <img src={apiData.url} alt={apiData.title} class="image" />
      <h2 class="title-name">{apiData.title}</h2>
      <p class="text-date">{apiData.date.replace(/-/g, '/')}</p>
      <p class="text-explanation">{apiData.explanation}</p>
			<strong>by {apiData.copyright}</strong>
		</div>
		<div>
		</div>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="View NASA API"
				body="Astronaut, launches to the space"
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
  .image {
    width: 100%;
  }
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 1.4rem;
		font-weight: 400;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		letter-spacing: .05em;
	}
	h2 {
		color: black;
		text-align: center;
		font-size: 2.4rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		//background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
